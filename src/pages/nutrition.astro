---
import Header from "../layouts/Header.astro";
import Footer from "../layouts/Footer.astro";
---

<Header></Header>
<main>
    <div class="container">
        <img class="title-pic" src="/nutrition-svg.svg" alt="Nutrition"/>
        <div class="subtitle">This is required by law, no styles for you.</div>
        <div class="lbl-container">
            <div class="label"></div>
            <div class="lbl-txt">txt lol, dems is some dark roast</div>
        </div>
        <div class="lbl-container">
            <div class="label"></div>
            <div class="lbl-txt">txt lol, dat deres some light roast</div>
        </div>
    </div>
</main>
<Footer></Footer>

<style is:global>
    main{
        min-height: 79vh;
    }
    
	:root {
		/* vars go here */
	}

	html {
		font-family: system-ui, sans-serif;
		background-color: black;
		color: white;
		font-family: 'Courier New', Courier, monospace;
		overflow-x: hidden;
	}

    body{
        margin: 0;
    }

	::-webkit-scrollbar{
    width: 12px;
	}
	::-webkit-scrollbar-thumb{
    background: black;
	border: 2px solid white;
	}
	::-webkit-scrollbar-corner{
		background-color: black;
	}
</style>
<style>
    .container{
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        min-height: 69vh;
    }

    .title-pic{
        height: 60px;
        margin: 65px 0 0 0;
    }

    .subtitle{
        margin-bottom: 15px;
    }

    .lbl-container{
        display: flex;
        gap: 25px;
        flex-wrap: wrap;
        align-items: center;
    }

    .label{
        height: 400px;
        aspect-ratio: 5/7;
        border-radius: 5px;
        background-color: rgba(255, 255, 255, 0.69);
    }

    .lbl-txt{
        width: 285px;
    }
</style>