---
import TopSpacer from '../components/topSpacer.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content=" The Ceramic Lounge is a coffee company built on serving the car community and giving them a place to hold events and socialize.">
		<meta name="viewport" content="width=device-width" />

		<!-- icons available -->
		<link rel="icon" href="/favicon.ico" sizes="48x48" ><!-- REVISED (Aug 11, 2023)! -->
		<link rel="icon" href="/favicon.svg" sizes="any" type="image/svg+xml"><!-- REVISED (Aug 11, 2023)! -->
		<link rel="apple-touch-icon" href="/android-512x512.png"/>
		<link rel="manifest" href="/site.webmanifest" />
		<link rel="mask-icon" href="/favicon.svg" color="#AC0000" /> <!-- safari-pinned-tab icon -->
		<meta name="theme-color" content="#000000" /> <!--chrome tab color on android -->

		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Ceramic Lounge Coffee is a car-centric cafe dedicated to hosting events and serving great coffee. Our mission is thriving car culture with great coffee.">
		<meta name="keywords" content="cermaic lounge coffee, ceramic lounge, coffee lounge, coffee, cars, car, meet, meets, car events, car shows, cafe, carbon, fiber, beans, ceramic, bean, night, life, entertainment, music, live music, lounge, events, caffiene, espresso, houston, underground, ethanol, coffee shop, espresso, cappuccino, latte, pastries, specialty drinks, barista, coffee beans, single origin, coffee brewing, coffeehouse, caffeine, artisanal coffee, coffee blends, coffee tasting, breakfast, brunch, coffee culture, coffee enthusiasts, coffee roasting">
		<title>{title}</title>
	</head>
	<Header></Header>
	<body>
		<slot />
	</body>
	<Footer></Footer>
</html>
<style is:global>
	:root {
		/* vars go here */
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: black;
		color: white;
		font-family: 'Courier New', Courier, monospace;
		overflow-x: hidden;
	}
	body{
		overflow-x: hidden;
		margin: 0;
	}
	::-webkit-scrollbar{
    	width: 12px;
	}
	::-webkit-scrollbar-thumb{
    	background: #AC0000;
	}
	::-webkit-scrollbar-corner{
		background-color: black;
	}
</style>
